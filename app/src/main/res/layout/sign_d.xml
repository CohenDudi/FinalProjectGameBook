<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/gamerbooking_green"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter username"
        android:inputType="textEmailAddress"
        android:gravity="center"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:id="@+id/username_input1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter Full name"
        android:textColor="@color/white"
        android:gravity="center"
        android:textColorHint="@color/white"
        android:id="@+id/fullname_input1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter password"
        android:textColor="@color/white"
        android:inputType="number|numberPassword"
        android:gravity="center"
        android:textColorHint="@color/white"
        android:id="@+id/password_input1"/>
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        >
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/sign_in_up"
            android:clickable="true"
            android:text="Sign In"
            android:textAllCaps="false"
            android:layout_marginRight="5dp"
            android:textColor="@color/yellow"
            android:background="@drawable/button_background_left"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/close"
            android:clickable="true"
            android:text="Cancel"
            android:textAllCaps="false"
            android:layout_marginRight="-5dp"
            android:textColor="@color/yellow"
            android:background="@drawable/button_background_right"/>


    </LinearLayout>


</LinearLayout>